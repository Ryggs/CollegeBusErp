 <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="4dp"
     >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="210dp"
           android:orientation="vertical"
           android:background="#2196F3"
           android:id="@+id/container"
           >
        
      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hugh"
        android:id="@+id/circleView"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        app:civ_border_width="1dp"
       app:civ_border_color="#fff"
       />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Name"
            android:layout_toRightOf="@id/circleView"
            android:textSize="28sp"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:id="@+id/mainContent"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branch Name"
            android:layout_toRightOf="@id/circleView"
            android:layout_below="@id/mainContent"
            android:id="@+id/subContent"
            android:textSize="18sp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textColor="#ffffff"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/circleView"
            android:layout_below="@id/subContent"
            android:weightSum="1"
            >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Present"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textColor="#ffffff"
            android:id="@+id/present_count"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textColor="#ffffff"
            android:id="@+id/absent_count"
            />
        </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="bottom"
            >
        <Button
        android:layout_height="wrap_content"
        android:text="Present"
        android:layout_width="0dp"
        android:layout_weight="0.3"

        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:id="@+id/present"
        android:paddingTop="8dp"
        android:background="#00000000"
        android:textColor="#8e908f"
        />
     <Button
        android:layout_height="wrap_content"
        android:text="Absent"
        android:layout_width="0dp"
        android:layout_weight="0.3"

        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:id="@+id/absent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#00000000"
        android:textColor="#23ccb6"
        />
        </LinearLayout>
        </android.support.v7.widget.CardView>